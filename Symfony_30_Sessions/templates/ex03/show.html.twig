{% extends 'ex01/base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <div class="post">
        <div class="post-title">{{ post.title }}</div>
        
        <p style="text-align: center; color: #ccc;">
            By <strong style="color: yellow;">{{ post.author.username }} ({{ post.author.reputation }} points)</strong> 
            on {{ post.createdDate|date('d/m/Y H:i') }}
        </p>

        <div style="border: 2px dashed #00ff00; padding: 10px; margin: 10px 0; background: #000;">
            {{ post.content|nl2br }}
        </div>

        {# BLOC VOTES #}
        <div style="text-align: center; margin-top: 20px; border-top: 2px double #ff00aa; padding-top: 10px;">
            <p style="font-weight: bold; font-size: 1.1em;">
                <span style="color: #0f0;">Likes: {{ post.likesCount }}</span> | 
                <span style="color: #f00;">Dislikes: {{ post.dislikesCount }}</span>
            </p>
            
            {% if app.user and app.user != post.author %}
                <div style="margin-bottom: 10px;">
                    {% if is_granted('ROLE_ADMIN') or app.user.reputation >= 3 %}
                        <a href="{{ path('app_vote', {'id': post.id, 'type': 'like'}) }}" class="btn" style="background-color: #ff00aa;">Like</a>
                    {% endif %}

                    {% if is_granted('ROLE_ADMIN') or app.user.reputation >= 6 %}
                        <a href="{{ path('app_vote', {'id': post.id, 'type': 'dislike'}) }}" class="btn" style="background-color: #dc3545;">Dislike</a>
                    {% endif %}
                </div>
                
                <p class="tags">
                    {% if app.user.reputation < 3 %}(Need 3 pts to like, 6 pts to dislike)<br>{% endif %}
                    {% if app.user.reputation >= 3 and app.user.reputation < 6 %}(Need 6 pts to dislike){% endif %}
                </p>
            {% endif %}
        </div>

        {# BLOC EDITION #}
        {% if app.user %}
            {% if is_granted('ROLE_ADMIN') or app.user == post.author or app.user.reputation >= 9 %}
                 <div style="text-align: center; margin-top: 20px;">
                    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn" style="background-color: #ffc107; color: black;">Edit Post</a>
                </div>
            {% endif %}
        {% endif %}

        {% if post.lastEditor %}
            <p class="tags" style="text-align: right; margin-top: 15px;">
                Last edited by {{ post.lastEditor.username }} on {{ post.lastEditDate|date('d/m/Y H:i') }}
            </p>
        {% endif %}
        
        <div style="text-align: center; margin-top: 20px;">
            <a href="{{ path('app_homepage') }}">Back</a>
        </div>
    </div>
{% endblock %}