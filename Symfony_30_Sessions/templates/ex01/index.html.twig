{% extends 'ex01/base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
    <div style="display: flex; flex-direction: column; align-items: center; width: 100%; max-width: 800px; padding: 20px;">
        
        {# Welcome Card #}
        <div class="card" style="text-align: center; margin-bottom: 20px;">
            <h1>Welcome to my blog</h1>
            
            {% if app.user %}
                {# LOGGED IN USER #}
                <p>Hello <strong style="color: #28a745;">{{ app.user.username }}</strong> !</p>
                
                <div style="margin-top: 10px;">
                    <a href="{{ path('app_post_new') }}" class="btn" style="background-color: #28a745;">+ New Post</a>
                    <a href="{{ path('app_logout') }}" class="btn" style="background-color: #6c757d;">Logout</a>
                </div>

            {% else %}
                {# ANONYMOUS USER #}
                {% if anonymous_info is defined and anonymous_info %}
                    <div style="background-color: #f8f9fa; padding: 15px; border-radius: 5px; margin-bottom: 15px; border: 1px solid #dee2e6;">
                        <h3 style="margin: 0; color: #495057;">{{ anonymous_info.name }}</h3>
                        <small style="color: #6c757d;">
                            Last action: {{ anonymous_info.seconds_since }} seconds ago.
                        </small>
                    </div>
                {% endif %}

                <p style="margin-bottom: 15px;">Please log in to publish articles.</p>

                {# CORRECTION : On garde l'affichage vertical standard #}
                {# On a juste retiré la div "links" pour que le texte reste blanc #}
                <a href="{{ path('app_login') }}" class="btn">Log in</a>
                <a href="{{ path('app_register') }}" class="btn">Register</a>

            {% endif %}
        </div>

        {# Posts List #}
        {% for post in posts %}
            <div class="card" style="margin-bottom: 15px; text-align: left;">
                <h2 style="margin-top: 0;">
                    <a href="{{ path('app_post_show', {'id': post.id}) }}" style="color: #333; text-decoration: none;">
                        {{ post.title }}
                    </a>
                </h2>
                <p style="font-size: 0.9em; color: #777;">
                    Written by <strong>{{ post.author.username }}</strong> on {{ post.createdDate|date('d/m/Y') }}
                </p>
                <p>{{ post.content|slice(0, 100) }}...</p>
                
                <a href="{{ path('app_post_show', {'id': post.id}) }}" style="color: #007bff; text-decoration: none;">Read more →</a>
            </div>
        {% else %}
            <div class="card" style="text-align: center;">
                <p>No posts found yet.</p>
            </div>
        {% endfor %}

    </div>
{% endblock %}