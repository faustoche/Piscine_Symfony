{% extends 'ex01/base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
    
    <div class="post">
        <div class="post-title">Welcome to my blog</div>
        
        {% if app.user %}
            <p style="text-align: center;">Hello <strong style="color: yellow;">{{ app.user.username }}</strong> !</p>
            <div style="text-align: center;">
                <a href="{{ path('app_post_new') }}" class="btn" style="background-color: #ff00aa;">+ New Post</a>
                <a href="{{ path('app_logout') }}" class="btn" style="background-color: #6c757d;">Logout</a>
            </div>
        {% else %}
            {# ANONYMOUS USER #}
            {% if anonymous_info is defined and anonymous_info %}
                <div style="border: 2px dashed #fff; padding: 10px; margin: 10px;">
                    <h3 style="color: #0ff; margin:0;">{{ anonymous_info.name }}</h3>
                    <small>Last action: {{ anonymous_info.seconds_since }} seconds ago.</small>
                </div>
            {% endif %}

            <p style="text-align: center;">Please log in to publish articles.</p>
            <div style="text-align: center;">
                <a href="{{ path('app_login') }}" class="btn">Log in</a>
                <a href="{{ path('app_register') }}" class="btn">Register</a>
            </div>
        {% endif %}
    </div>

    {# Posts List #}
    {% for post in posts %}
        <div class="post">
            <div class="post-title">{{ post.title }}</div>
            
            <p>{{ post.content|slice(0, 100) }}...</p>
            
            <div class="tags" style="margin-top: 10px; border-top: 1px dashed #ff00aa; padding-top: 5px;">
                <p>
                    Written by <strong style="color: yellow;">{{ post.author.username }}</strong> 
                    ({{ post.author.reputation }} points)
                    on {{ post.createdDate|date('d/m/Y') }}
                </p>
                <p style="font-weight: bold;">
                    <span style="color: #0f0;">Likes: {{ post.likesCount }}</span> | 
                    <span style="color: #f00;">Dislikes: {{ post.dislikesCount }}</span>
                </p>
                <a href="{{ path('app_post_show', {'id': post.id}) }}">Read more â†’</a>
            </div>
        </div>
    {% else %}
        <div class="post">
            <p style="text-align: center;">No posts found yet.</p>
        </div>
    {% endfor %}

{% endblock %}