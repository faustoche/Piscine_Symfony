{% extends 'base.html.twig' %}

{% block content %}

    {# Section des notifications centrées #}
    {% for message in app.flashes('success') %}
        <div class="alert" style="color: #155724; background: #d4edda; border-color: #c3e6cb;">
            {{ message }} 
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert" style="color: #721c24; background: #f8d7da; border-color: #f5c6cb;">
            {{ message }} 
        </div>
    {% endfor %}

    {# Conteneur principal centré #}
    <div class="card">
        <p style="color: #666; margin-bottom: 20px;">Click to initialize the table.</p>
        
        {{ form_start(form) }}
            {{ form_widget(form.create) }}
        {{ form_end(form) }}
    </div>

{% endblock %}